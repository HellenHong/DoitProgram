<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="340dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".ShowEvent">

    <!--
    android:textAlignment="center"
    -->
    <ImageView
        android:id="@+id/close"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:src="@drawable/ic_baseline_close_24" />

    <TextView
        android:id="@+id/event1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="36dp"
        android:layout_marginTop="36dp"
        android:text="제목:"
        android:textColor="@color/black"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/eventNameET"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/event1"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@+id/event1"
        android:ems="7"
        android:inputType="text"
        android:privateImeOptions="defaultInputmode=korean"
        android:textSize="20sp"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/eventDateTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/event1"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/event1"
        android:text="날짜:"
        android:textColor="@color/black"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/selectEventDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/eventDateTV"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@+id/eventDateTV"
        android:ems="7"
        android:inputType="text"
        android:privateImeOptions="defaultInputmode=korean"
        android:textSize="20sp"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/eventPlace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/event1"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/eventDateTV"
        android:text="장소:"
        android:textColor="@color/black"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/placetv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/eventPlace"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@+id/eventPlace"
        android:ems="7"
        android:inputType="text"
        android:privateImeOptions="defaultInputmode=korean"
        android:textSize="20sp"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/event2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:layout_alignLeft="@+id/event1"
        android:layout_below="@+id/eventPlace"
        android:text="시작:"
        android:textSize="22sp"
        android:textAlignment="center"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/eventTimeTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/eventDateTV"
        android:layout_alignBaseline="@+id/event2"
        android:layout_alignLeft="@+id/eventNameET"
        android:layout_marginTop="30dp"
        android:layout_toRightOf="@+id/event2"
        android:inputType="none"
        android:textSize="22sp"
        android:textColor="@color/black" />
        <!--android:hint="시간을 입력해주세요" -->

    <TextView
        android:id="@+id/event3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/event2"
        android:layout_alignLeft="@+id/event1"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="36dp"
        android:text="종료:"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/eventTimeTV2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/event2"
        android:layout_alignBaseline="@+id/event3"
        android:layout_alignLeft="@+id/eventTimeTV"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="36dp"
        android:inputType="none"
        android:textSize="22sp"
        android:textColor="@color/black" />

</RelativeLayout>